option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "public_service_finder.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "public_service_finder.wsgi:application"
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: "static"

commands:
  01_install_pyjwt:
    command: "source /var/app/venv/*/bin/activate && pip install PyJWT==1.7.1 --force-reinstall"
  02_run_migrations:
    command: "source /var/app/venv/*/bin/activate && python /var/app/current/manage.py migrate --noinput"